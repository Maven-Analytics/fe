{
  "extends": [
    "xo",
    "plugin:react/recommended"
  ],
  "env": {
    "jest": true
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "camelcase": "off",
    "new-cap": "off"
  },
  "globals": {
    "window": true,
    "localStorage": true,
    "document": true
  }
}
