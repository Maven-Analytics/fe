{
  "extends": [
    "xo",
    "plugin:react/recommended"
  ],
  "env": {
    "jest": true
  },
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "simple-import-sort"
  ],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "camelcase": "off",
    "new-cap": "off",
    "simple-import-sort/sort": "error"
  },
  "globals": {
    "window": true,
    "localStorage": true,
    "document": true
  }
}
